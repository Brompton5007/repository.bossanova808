<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon
  id="repository.bossanova808"
  name="bossanova808's XBMC Addons"
  version="0.1"
  provider-name="bossanova808 [bossanova808@gmail.com]">
	<extension point="xbmc.addon.repository"
             name="bossanova808's XBMC Addon Repository">
    <info compressed="true">http://bossanova808-xbmc-addons.googlecode.com/git/staging/addons.xml</info>
    <checksum>http://bossanova808-xbmc-addons.googlecode.com/git/staging/addons.xml.md5</checksum>
    <datadir zip="true">http://bossanova808-xbmc-addons.googlecode.com/git/repository-downloads/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Repo for Bossanova808's XBMC Addons</summary>
		<description>Download and install addons by bossanova808, including XSqueeze.</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.xsqueeze"
       name="XSqueeze"
       version="0.4.6"
       provider-name="bossanova808">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.artistslideshow" version="1.3.1"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Squeezebox player/controller for XBMC.</summary>
    <description lang="en">Turn your XBMC into a Squeeze player or control an external Squeezebox.</description>
    <disclaimer lang="en"></disclaimer>
  </extension>
</addon>

<addon
  id="skin.confluence.bossanova808"
  version="0.2.2"
  name="Confluence Bossanova808 Mod (based on  C 2.1.0)"
  provider-name="Jezz_X, Team XBMC, bossanova808">
  <requires>
    <import addon="xbmc.gui" version="3.00"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Confluence skin by Jezz_X. (XBMC's default skin) - + extras by bossanova808</summary>
    <description lang="en">THIS IS MY PERSONAL TWEAK OF EDEN's CONFLUENCE AND JUST IN THE REPO TO MAKE THINGS EASIER FOR ME.  PLEASE DO NOT USE THIS SKIN AS IT HAS HARDCODED REFERENCES TO SPECIFIC LOCAL PATHS ETC THAT RELATE ONLY TO ME.  Eden's Confluence skin with a few mods such as Time Remaining and OzWeather radar and long forecasts, as well as weather fan art on the home page.</description>
    <disclaimer lang="en">Confluence is the default skin for XBMC, removing it may cause issues</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
</addons>

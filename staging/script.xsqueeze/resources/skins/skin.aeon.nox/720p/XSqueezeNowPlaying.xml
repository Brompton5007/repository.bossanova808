<!-- WARNING - DO NOT CHANGE LABEL ID OF PROGRESS BAR OR YOU WILL BREAK IT!!-->
<!-- WARNING - DO NOT REMOVE PROGRESS BAR OR YOU WILL BREAK IT!!            -->
<!--  - Player: $INFO[Window.Property(PLAYER)] Server: $INFO[Window.Property(SERVER)] -->

<window>

  <allowoverlay>no</allowoverlay>
  <controls>

    <!-- BACKGROUND -->
    <control type="image">
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture background="true">../backgrounds/music.jpg</texture>
    </control>

    <!-- MAIN PANEL AND FLOOR AREA -->
    <control type="group">
      <animation type="WindowOpen" reversible="false">
        <effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300"/>
        <effect type="fade" start="0" end="100" time="300"/>
      </animation>
      <animation type="WindowClose" reversible="false">
        <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300"/>
        <effect type="fade" start="100" end="0" time="300"/>
      </animation>
      <include>VisibleFadeEffect</include>
      <control type="group">
        <animation effect="slide" start="0,0" end="-40,0" time="200" condition="StringCompare(Weather.Plugin,weather.weatherplus)">Conditional</animation>
        <posx>0</posx>
        <posy>0</posy>
      </control>

      <!-- NOW PLAYING TRACK LABELS & PROGRESS BAR -->
      <control type="group">
        <description>Current Track Details</description>
        <posx>330</posx>
        <posy>280r</posy>
        <control type="label" id="201">
          <description>Current Artist Label</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>800</width>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>true</scroll>
          <label>[UPPERCASE]$INFO[Window.Property(CURRENTARTIST)][/UPPERCASE]</label>
          <font>Font_MainClassic</font>
          <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label" id="202">
          <description>Current Album Label</description>
          <posx>20</posx>
          <posy>55</posy>
          <width>800</width>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>true</scroll>
          <label>[UPPERCASE]$INFO[Window.Property(CURRENTALBUM)][/UPPERCASE]</label>
          <font>Font_OSDClassic2</font>
          <textcolor>grey</textcolor>
        </control>
        <control type="label" id="200">
          <description>Current Track Name Label</description>
          <posx>40</posx>
          <posy>100</posy>
          <width>800</width>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>true</scroll>
          <label>[UPPERCASE]$INFO[Window.Property(CURRENTTITLE)][/UPPERCASE]</label>
          <font>Font_OSDClassic</font>
          <textcolor>FFFFFFFF</textcolor>
        </control>
      </control>
      <!-- END GROUP CURRENT TRACK LABELS -->

      <control type="group">
        <description>Current Track Details</description>
        <posx>395r</posx>
        <posy>80r</posy>
        <control type="progress" id="203">
          <description>Track Playing Progress</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>100</width>
          <height>10</height>
          <visible>true</visible>
          <reveal>false</reveal>
          <info/>
        </control>
        <control type="label" id="204">
          <description>Track Elapsed Label</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>140</width>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>false</scroll>
          <label>$INFO[Window.Property(TRACKELAPSED)]</label>
          <font>Font_MainClassic</font>
          <textcolor>FFFFFFFF</textcolor>
        </control>
        <control type="label" id="206">
          <description>Track Length Label</description>
          <posx>150</posx>
          <posy>0</posy>
          <width>190</width>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>false</scroll>
          <label>/ $INFO[Window.Property(TRACKLENGTH)]</label>
          <font>Font_MainClassic</font>
          <textcolor>FFFFFFFF</textcolor>
        </control>
      </control>

      <!-- COVER ART FOR CURRENT TRACK -->
      <control type="image" id="100">
        <description>Cover art for currently playing track</description>
        <posx>60</posx>
        <posy>310r</posy>
        <width>250</width>
        <height>250</height>
      </control>

      <!-- THUMBNAILS FOR UPCOMING TRACKS -->
      <control type="group">
        <description>Upcoming Tracks Thumbs</description>
        <posx>0</posx>
        <posy>0</posy>
        <control type="image" id="101">
          <description>Cover art for track + 1</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>1</width>
          <height>1</height>
        </control>
        <control type="image" id="102">
          <description>Cover art for track + 2</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>1</width>
          <height>1</height>
        </control>
        <control type="image" id="103">
          <description>Cover art for track + 3</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>1</width>
          <height>1</height>
        </control>
      </control>
      <!-- END GROUP UPCOMING THUMBS -->

      <!-- UPCOMING TRACK LABELS -->
        <control type="label" id="2001">
          <description>Coming Up Track1 Label</description>
          <posx>60</posx>
          <posy>30r</posy>
          <width>1160</width>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>true</scroll>
          <label>$INFO[Window.Property(UPCOMING1)]   $INFO[Window.Property(UPCOMING2)]   $INFO[Window.Property(UPCOMING3)]</label>
          <font>Font_Bold28</font>
          <textcolor>white</textcolor>
        </control>
      <!-- END GROUP UPCOMING TRACKS -->

      <!-- THE SQUEEZEBOX LIKE DISPLAY/CONTROLLER-->
      <control type="group">
        <description>SqueezeBox Display/Controller</description>
        <posx>0</posx>
        <posy>0</posy>
      <control type="image">
        <description>time background</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>440</width>
        <height>50</height>
        <texture flipy="true" flipx="true">home/timepanel_mid.png</texture>
      </control>
        <control type="label" id="1000">
          <description>SqueezeBox Display Line 1</description>
          <posx>20</posx>
          <posy>-2</posy>
          <width>180</width>
          <height>28</height>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>true</scroll>
          <label>$INFO[Window.Property(DISPLAYLINE1)]</label>
          <font>Font_Reg17</font>
          <textcolor>FFFFFFFF</textcolor>
          <wrapmultiline>false</wrapmultiline>
          <scrollspeed>50</scrollspeed>
          <scrollsuffix> - </scrollsuffix>
        </control>
        <control type="label" id="1001">
          <description>SqueezeBox Display Line 2</description>
          <posx>200</posx>
          <posy>-2</posy>
          <width>200</width>
          <height>28</height>
          <visible>true</visible>
          <align>left</align>
          <aligny>center</aligny>
          <scroll>true</scroll>
          <label>$INFO[Window.Property(DISPLAYLINE2)]</label>
          <font>Font_Reg17</font>
          <textcolor>FFFFFFFF</textcolor>
          <wrapmultiline>false</wrapmultiline>
          <scrollspeed>50</scrollspeed>
          <scrollsuffix> - </scrollsuffix>
        </control>
      </control>
      <!-- END GROUP SQUEEZEBOX CONTROLLER/DISPLAY -->

    </control>
    <!-- END GROUP MAIN PANEL AND FLOOR -->


    <!-- FROM HERE DOWN - THE CLOCK & WEATHER -->
    <control type="group">
      <posx>330r</posx>
      <posy>0</posy>
      <animation effect="slide" start="0,0" end="490,0" time="300">WindowClose</animation>
      <animation effect="slide" start="490,0" end="0,0" delay="WidgetSlideDelay" time="300" condition="!Window.Previous(startup)">WindowOpen</animation>
      <animation effect="slide" start="490,0" end="0,0" delay="2500" time="600" condition="Window.Previous(startup)">WindowOpen</animation>
      <control type="image">
        <description>time background</description>
        <posx>-161</posx>
        <posy>0</posy>
        <width>490</width>
        <height>50</height>
        <texture flipy="true">home/timepanel_mid.png</texture>
        <animation effect="slide" start="0,0" end="200,0" delay="0" time="300" condition="Skin.HasSetting(homepageWeatherinfo)">conditional</animation>
      </control>
      <control type="label">
        <description>time label</description>
        <posx>320</posx>
        <posy>-2</posy>
        <width>400</width>
        <height>28</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>Font_Reg17_Caps</font>
        <textcolor>dcFFFFFF</textcolor>
        <shadowcolor>-</shadowcolor>
        <label>[UPPERCASE][COLOR white2]$INFO[System.Date]  |  [/COLOR][COLOR ffaaaaaa]$INFO[System.Time][/COLOR][/UPPERCASE]</label>
      </control>
      <control type="group">
        <posx>-140</posx>
        <visible>!Skin.HasSetting(homepageWeatherinfo) + Weather.IsFetched</visible>
        <include condition="!Skin.HasSetting(AnimatedWeatherIcons)">weathericon</include>
        <include condition="Skin.HasSetting(AnimatedWeatherIcons)">animatedweathericon</include>
        <control type="label">
          <description>time label</description>
          <posx>41</posx>
          <posy>-2</posy>
          <width>200</width>
          <height>28</height>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg17</font>
          <textcolor>white2</textcolor>
          <shadowcolor>-</shadowcolor>
          <label>$INFO[Window(weather).Property(Current.Temperature)] $INFO[System.TemperatureUnits]</label>
        </control>
      </control>
    </control>
    <!-- END - THE CLOCK & WEATHER -->
  </controls>
</window>
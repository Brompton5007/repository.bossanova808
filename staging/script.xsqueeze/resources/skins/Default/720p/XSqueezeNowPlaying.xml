    <control type="image">
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture>music.jpg</texture>
    </control>
    -->

    <!-- ANIMATIONS -->
    <control type="image">
      <posx>0</posx>
      <posy>100r</posy>
      <width>1280</width>
      <height>100</height>
      <texture>floor.png</texture>
      <include>VisibleFadeEffect</include>
      <animation effect="slide" start="0,10" end="0,0" time="200" condition="Window.Previous(Home)">WindowOpen</animation>
      <animation effect="slide" start="0,0" end="0,10" time="200" condition="Window.Next(Home)">WindowClose</animation>
    </control>

    <!-- MAIN PANEL AND FLOOR AREA -->
    <control type="group">
      <animation type="WindowOpen" reversible="false">
        <effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300"/>
        <effect type="fade" start="0" end="100" time="300"/>
      </animation>
      <animation type="WindowClose" reversible="false">
        <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300"/>
        <effect type="fade" start="100" end="0" time="300"/>
      </animation>
      <include>VisibleFadeEffect</include>
      <control type="group">
        <animation effect="slide" start="0,0" end="-40,0" time="200" condition="StringCompare(Weather.Plugin,weather.weatherplus)">Conditional</animation>
        <posx>40</posx>
        <posy>40</posy>
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>1200</width>
          <height>600</height>
          <texture border="20">ContentPanel.png</texture>
        </control>
        <control type="image">
          <posx>0</posx>
          <posy>592</posy>
          <width>1200</width>
          <height>64</height>
          <texture border="10">ContentPanelMirror.png</texture>
        </control>
        <control type="image">
          <posx>20</posx>
          <posy>5</posy>
          <width>1200</width>
          <height>90</height>
          <aspectratio>stretch</aspectratio>
          <texture>GlassTitleBar.png</texture>
        </control>
        <control type="label">
          <description>header label</description>
          <posx>-40</posx>
          <posy>10</posy>
          <width>1280</width>
          <height>30</height>
          <font>font16caps</font>
          <label>$INFO[Window.Property(XSQUEEZE_NAME)]</label>
          <align>center</align>
          <aligny>center</aligny>
          <textcolor>FF888888</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>

        <control type="label">
          <description>server label</description>
          <posx>60r</posx>
          <posy>2</posy>
          <width>1280</width>
          <height>30</height>
          <font>font10</font>
          <label>Server: $INFO[Window.Property(XSQUEEZE_SERVER)]</label>
          <align>right</align>
          <aligny>center</aligny>
          <textcolor>FF333333</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
        <control type="label">
          <description>player label</description>
          <posx>60r</posx>
          <posy>18</posy>
          <width>1280</width>
          <height>30</height>
          <font>font10</font>
          <label>Player: $INFO[Window.Property(XSQUEEZE_PLAYERMAC)]</label>
          <align>right</align>
          <aligny>center</aligny>
          <textcolor>FF333333</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>

      </control>


      <control type="multiimage">
      	<posx>850</posx>
      	<posy>300</posy>
      	<width>300</width>
      	<height>300</height>
        <visible>SubString(Window.Property(XSQUEEZE_PLAYING_RADIO),false)</visible>
        <imagepath fallback="DefaultFanart.jpg" background="true">$INFO[Window.Property(ArtistSlideshow)]</imagepath>
      	<aspectratio>keep</aspectratio>
      	<timeperimage>5000</timeperimage>
      	<fadetime>2000</fadetime>
      	<randomize>true</randomize>
      	<animation effect="fade" start="0" end="100" time="300">Visible</animation>
      	<animation effect="fade" start="100" end="0" time="300">Hidden</animation>
      </control>




<!-- WARNING - DO NOT CHANGE LABEL ID OF PROGRESS BAR OR YOU WILL BREAK IT!!-->
<!-- WARNING - DO NOT REMOVE PROGRESS BAR OR YOU WILL BREAK IT!!						-->
<!--	- Player: $INFO[Window.Property(PLAYER)] Server: $INFO[Window.Property(SERVER)] -->

<window>
	<allowoverlay>no</allowoverlay>
	<controls>
		<!-- BACKGROUND -->
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath background="true">$INFO[Window.Property(ArtistSlideshow)]</imagepath>
			<aspectratio>keep</aspectratio>
			<timeperimage>10000</timeperimage>
			<fadetime>2000</fadetime>
			<randomize>true</randomize>
			<animation effect="fade" start="0" end="100" time="300">Visible</animation>
			<animation effect="fade" start="100" end="0" time="300">Hidden</animation>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>-100</posy>
			<width>1280</width>
			<height>256</height>
			<texture flipy="true">HomeNowPlayingBack.png</texture>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>230r</posy>
			<width>1280</width>
			<height>230</height>
			<texture>HomeNowPlayingBack.png</texture>
		</control>

		<!-- MAIN PANEL -->
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300"/>
				<effect type="fade" start="0" end="100" time="300"/>
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300"/>
				<effect type="fade" start="100" end="0" time="300"/>
			</animation>
			<include>VisibleFadeEffect</include>
			<control type="group">
				<animation effect="fade" time="200">VisibleChange</animation>
				<control type="label">
					<description>Normal Header label</description>
					<posx>765</posx>
					<posy>5</posy>
					<width>800</width>
					<height>25</height>
					<align>right</align>
					<aligny>top</aligny>
					<font>font10</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>Server: $INFO[Window.Property(SERVER)] | Player: $INFO[Window.Property(PLAYERMAC)]</label>
				</control>
			</control>
			
			<!-- THE SQUEEZEBOX LIKE DISPLAY/CONTROLLER-->
			<control type="group">
				<description>SqueezeBox Display/Controller</description>
				<posx>10</posx>
				<posy>10</posy>
				<control type="label" id="1000">
					<description>SqueezeBox Display Line 1</description>
					<posx>0</posx>
					<posy>5</posy>
					<width>1120</width>
					<visible>true</visible>
					<align>left</align>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<label>$INFO[Window.Property(DISPLAYLINE1)]</label>
					<font>font14</font>
					<textcolor>FF00FF00</textcolor>
					<wrapmultiline>false</wrapmultiline>
					<scrollspeed>50</scrollspeed>
					<scrollsuffix> - </scrollsuffix>
				</control>
				<control type="label" id="1001">
					<description>SqueezeBox Display Line 2</description>
					<posx>0</posx>
					<posy>30</posy>
					<width>1120</width>
					<visible>true</visible>
					<align>left</align>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<label>$INFO[Window.Property(DISPLAYLINE2)]</label>
					<font>font14</font>
					<textcolor>FF00FF00</textcolor>
					<wrapmultiline>false</wrapmultiline>
					<scrollspeed>50</scrollspeed>
					<scrollsuffix> - </scrollsuffix>
				</control>
			</control>
			<!-- END GROUP SQUEEZEBOX CONTROLLER/DISPLAY -->

			<!-- COVER ART FOR CURRENT TRACK -->
			<control type="image" id="100">
				<description>Cover art for currently playing track</description>
				<posx>50</posx>
				<posy>280r</posy>
				<width>250</width>
				<height>250</height>
			</control>
			<!-- END COVER ART FOR CURRENT TRACK -->

			<!-- NOW PLAYING AND NEXT TRACK LABELS & PROGRESS BAR -->
			<control type="group">
				<description>Current Track Details</description>
				<posx>340</posx>
				<posy>175r</posy>
				<control type="label" id="199">
					<description>Now Playing Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>910</width>
					<height>25</height>
					<visible>true</visible>
					<align>left</align>
					<font>font13</font>
					<label>$LOCALIZE[31040]</label>
					<textcolor>white</textcolor>
				</control>
				<control type="label" id="201">
					<description>Current Artist Label</description>
					<posx>20</posx>
					<posy>30</posy>
					<width>910</width>
					<height>25</height>
					<align>left</align>
					<font>font12</font>
					<label>$INFO[Window.Property(CURRENTARTIST)] - $INFO[Window.Property(CURRENTALBUM)]</label>
					<textcolor>grey2</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="label" id="200">
					<description>Current Track Name Label</description>
					<posx>20</posx>
					<posy>60</posy>
					<width>910</width>
					<height>30</height>
					<font>font30</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[Window.Property(CURRENTTITLE)]</label>
					<textcolor>orange</textcolor>
					<scroll>true</scroll>
				</control>
			</control>
			<control type="group">
				<posx>330</posx>
				<posy>85r</posy>
				<control type="progress" id="203">
					<description>Track Playing Progress</description>
					<posx>100</posx>
					<posy>15</posy>
					<width>720</width>
					<height>16</height>
					<visible>true</visible>
					<reveal>false</reveal>
					<info/>
				</control>
				<control type="label" id="204">
					<description>Track Elapsed Label</description>
					<posx>95</posx>
					<posy>0</posy>
					<width>100</width>
					<height>40</height>
					<font>font13</font>
					<align>right</align>
					<aligny>center</aligny>
					<visible>true</visible>
					<scroll>true</scroll>
					<label>$INFO[Window.Property(TRACKELAPSED)]</label>
				</control>
				<control type="label" id="206">
					<description>Track Length Label</description>
					<posx>825</posx>
					<posy>0</posy>
					<width>100</width>
					<height>40</height>
					<font>font13</font>
					<align>left</align>
					<aligny>center</aligny>
					<visible>true</visible>
					<scroll>true</scroll>
					<label>$INFO[Window.Property(TRACKLENGTH)]</label>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>30</posy>
					<width>910</width>
					<height>25</height>
					<label>$LOCALIZE[209]: $INFO[Window.Property(UPCOMING1)] | $INFO[Window.Property(UPCOMING2)]</label>
					<align>center</align>
					<aligny>center</aligny>
					<font>font12</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<animation effect="fade" time="200">VisibleChange</animation>
				</control>
			</control>
			<!-- END NOW PLAYING AND NEXT TRACK LABELS & PROGRESS BAR -->

			<!-- THUMBNAILS FOR UPCOMING TRACKS -->
			<!-- these aren't used in the Confluence markup, but if you remove them the skin doesn't
			     load correctly, so they are placed off screen -->
			<control type="group">
				<description>Upcoming Tracks Thumbs</description>
				<posx>95</posx>
				<posy>370</posy>
				<control type="image" id="101">
					<description>Cover art for track + 1</description>
					<posx>-400</posx>
					<posy>-400</posy>
					<width>75</width>
					<height>75</height>
				</control>
				<control type="image" id="102">
					<description>Cover art for track + 2</description>
					<posx>-400</posx>
					<posy>-400</posy>
					<width>75</width>
					<height>75</height>
				</control>
				<control type="image" id="103">
					<description>Cover art for track + 3</description>
					<posx>-400</posx>
					<posy>-400</posy>
					<width>75</width>
					<height>75</height>
				</control>
			</control>
			<!-- END GROUP UPCOMING THUMBS -->

		</control>
		<!-- END GROUP MAIN PANEL -->


		<!-- FROM HERE DOWN - THE CLOCK & WEATHER -->
		<control type="group">
			<posx>520r</posx>
			<posy>0</posy>
			<animation effect="slide" start="0,0" end="-60,0" delay="0" time="300" condition="Window.IsVisible(MuteBug)">conditional</animation>
			<animation effect="slide" start="0,0" end="550,0" delay="0" time="300">WindowClose</animation>
			<animation effect="slide" start="550,0" end="0,0" delay="0" time="300">WindowOpen</animation>
			<visible>!Skin.HasSetting(homepageWeatherinfo) + Weather.IsFetched</visible>
			<control type="image">
				<description>time background</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>180</width>
				<height>35</height>
				<texture flipx="true" border="32,0,0,0">header.png</texture>
			</control>
			<control type="image">
				<description>Weather image</description>
				<posx>30</posx>
				<posy>1</posy>
				<width>25</width>
				<height>25</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[Window(Weather).Property(Current.ConditionIcon)]</texture>
			</control>
			<control type="label">
				<description>time label</description>
				<posx>60</posx>
				<posy>0</posy>
				<width>100</width>
				<height>28</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>[B]$INFO[Weather.Temperature][/B]</label>
			</control>
		</control>
		<control type="group">
			<posx>390r</posx>
			<posy>0</posy>
			<animation effect="slide" start="0,0" end="-60,0" delay="0" time="300" condition="Window.IsVisible(MuteBug)">conditional</animation>
			<animation effect="slide" start="0,0" end="420,0" delay="0" time="300">WindowClose</animation>
			<animation effect="slide" start="420,0" end="0,0" delay="0" time="300">WindowOpen</animation>
			<control type="image">
				<description>time background</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>440</width>
				<height>35</height>
				<texture flipx="true" border="32,0,0,0">header.png</texture>
			</control>
			<control type="label">
				<description>time label</description>
				<posx>30</posx>
				<posy>0</posy>
				<width>400</width>
				<height>28</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>[COLOR=grey]$INFO[System.Date][/COLOR] | $INFO[System.Time]</label>
			</control>
		</control>
		<!-- END - THE CLOCK & WEATHER -->

	</controls>
</window>

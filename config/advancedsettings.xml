<advancedsettings>
    <loglevel>1</loglevel>
    <debug>
        <extralogging>true</extralogging>
        <setextraloglevel>256,4096,65536</setextraloglevel>
        <showloginfo>false</showloginfo>
    </debug>
    <network>
        <buffermode>1</buffermode>
        <cachemembuffersize>536870912</cachemembuffersize>
        <readbufferfactor>2</readbufferfactor>
    </network>
    <videolibrary>
        <cleanonupdate>true</cleanonupdate>
    </videolibrary>
    <videodatabase>
        <type>mysql</type>
        <host>192.168.1.51</host>
        <port>3306</port>
        <user>xbmc</user>
        <pass>xbmc</pass>
        <name>xbmcvideo</name>
    </videodatabase>
    <musicdatabase>
        <type>mysql</type>
        <host>192.168.1.51</host>
        <port>3306</port>
        <user>xbmc</user>
        <pass>xbmc</pass>
        <name>xbmcmusic</name>
    </musicdatabase>
    <video>
        <audiodelayrange>2</audiodelayrange>
        <playcountminimumpercent>95</playcountminimumpercent>
        <ignoresecondsatstart>20</ignoresecondsatstart>
        <ignorepercentatend>2</ignorepercentatend>
        <latency>
            <!-- <delay>50</delay> -->
            <refresh>
                <min>23</min>
                <max>24</max>
                <delay>0</delay>
            </refresh>
        </latency>
    </video>
    <slideshow>
        <blackbarcompensation>0</blackbarcompensation>
    </slideshow>
</advancedsettings>
